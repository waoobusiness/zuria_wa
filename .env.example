# HTTP
PORT=3001
PUBLIC_BASE_URL=https://zuria-wa.onrender.com

# Auth persist (où stocker les creds WhatsApp et les médias localement)
AUTH_DIR=./.wa
MEDIA_DIR=./.wa/media

# API security côté Gateway
API_KEY=change-me-gateway
WEBHOOK_SECRET=change-me-fallback

# webhooks vers Supabase (Edge Function)
SUPABASE_WEBHOOK_URL=https://YOUR_SUPABASE_PROJECT.supabase.co/functions/v1/whatsapp-webhook-gateway

# Baileys / comportement connexion
WA_MARK_ONLINE=false
WA_FULL_HISTORY=true

# Anti-ban (pacing d'envoi par session)
SEND_MIN_INTERVAL_MS=1500
SEND_MAX_PER_MINUTE=20
SEND_JITTER_MS=400
